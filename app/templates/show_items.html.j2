{% extends 'base.html.j2'%}
{% block title %}
Items
{% endblock %}

{% block content %}

<div id="box" class="d-flex flex-column;">
    <div class="row;">
    <table class="table table-striped table-hover;">
    <thead>
    <h1>Items</h1>
    <tr>
    <th scope="col">Item ID</th>
    <th scope="col">UPC</th>
    <th scope="col">Item Name</th>
    <th scope="col">Item Description</th>
    <th scope="col">Item Price</th>
    </tr>
    </thead>
{% for a in items %}
    </tbody>
    <tr>                                   
    <td scope="row">{{a.item_id}}</td>
    <td>{{a.upc}}</td>
    <td>{{a.item_name}}</td>
    <td>{{a.item_desc}}</td>
    <td>{{a.item_price}}</td>
    <td> <a href="{{url_for('site.add_items', id = a.item_id)}}" class="btn btn-primary">Add to Cart</a></td>
    <td> <a href="{{url_for('site.show_item', id = a.item_id)}}" class="btn btn-primary">Display Item</a></td>
    </tr>
    <tbody>
{% endfor %}
    </table>
{% endblock %}