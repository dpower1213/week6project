{% extends 'base.html.j2'%}
{% block title %}
Cart
{% endblock %}

{% block content %}
<div id="box" class="d-flex flex-column;">
    <div class="row;">
    <table class="table table-striped table-hover;">
    <thead>
    <h1>Items in Cart</h1>
    <tr>
    <th scope="col">Item ID</th>
    <th scope="col">UPC</th>
    <th scope="col">Item Name</th>
    <th scope="col">Item Description</th>
    <th scope="col">Item Price</th>
    </tr>
    </thead>
{% for a in current_user.itemss %}
    </tbody>
    <tr>                                   
    <td scope="row">{{a.item_id}}</td>
    <td>{{a.upc}}</td>
    <td>{{a.item_name}}</td>
    <td>{{a.item_desc}}</td>
    <td>{{a.item_price}}</td>
    <td> <a href="{{url_for('site.delete_item', id2 = a.item_id)}}" class="btn btn-primary">Delete from Cart</a></td>
    </tr>
    <tbody>
{% endfor %}
    </table>
    <a href="{{url_for('site.delete_cart')}}" class="btn btn-primary">Delete Cart</a>
{% endblock %}